<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">

        <com.ula.gameapp.utils.views.FontBodyTextView
            android:id="@+id/txt_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Monday"
            android:textSize="17sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_stickman0"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_marginLeft="6dp"
                android:alpha="50"
                android:src="@mipmap/ic_stickman_0"/>

            <ImageView
                android:id="@+id/img_stickman1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="-6dp"
                android:layout_marginRight="-6dp"
                android:alpha="50"
                android:src="@mipmap/ic_stickman_1"/>

            <ImageView
                android:id="@+id/img_stickman2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="-6dp"
                android:layout_marginRight="-6dp"
                android:alpha="50"
                android:src="@mipmap/ic_stickman_2"/>

            <ImageView
                android:id="@+id/img_stickman3"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="-6dp"
                android:layout_marginRight="-6dp"
                android:alpha="50"
                android:src="@mipmap/ic_stickman_3"/>

            <ImageView
                android:id="@+id/img_stickman4"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="-6dp"
                android:layout_marginRight="-6dp"
                android:alpha="50"
                android:src="@mipmap/ic_stickman_4"/>

            <ImageView
                android:id="@+id/img_stickman5"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="-6dp"
                android:layout_marginRight="-6dp"
                android:alpha="50"
                android:src="@mipmap/ic_stickman_5"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_step_count"
        android:gravity="start"
        android:textSize="12sp"
        android:layout_marginStart="8dp"/>

    <ProgressBar
        android:id="@+id/seekbar_progress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:progress="70"/>
</LinearLayout>