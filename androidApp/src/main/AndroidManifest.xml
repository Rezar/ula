<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />

    <application
        android:name=".Singleton"
        android:allowBackup="false"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <service
            android:name=".StepDetectorService"
            android:enabled="true"
            android:exported="false">

        </service>

        <activity
            android:name="MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--gaming activities-->
        <activity
            android:name=".ui.lockgame.tictactoe.TicTacToeActivity">
        </activity>
        <activity
            android:name=".ui.lockgame.dinogame.DinoGameActivity">
        </activity>
        <activity
            android:name=".ui.lockgame.snakegame.presentation.activity.SnakeGameActivity">
        </activity>
        <activity
            android:name=".ui.lockgame.snakegame.presentation.activity.GameActivity">
        </activity>
        <activity
            android:name=".ui.lockgame.flappybird.FlappyBirdActivity">
        </activity>

    </application>
</manifest> 