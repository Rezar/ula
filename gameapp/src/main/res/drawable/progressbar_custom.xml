<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="3000"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360" >

    <shape
        android:innerRadius="18dp"
        android:shape="ring"
        android:thickness="5dp"
        android:useLevel="false" >
        <size
            android:height="210dp"
            android:width="210dp" />

        <gradient
            android:centerColor="#86D81B60"
            android:centerY="0.5"
            android:endColor="#9AD81B60"
            android:startColor="#02D81B60"
            android:type="sweep"
            android:useLevel="false" />
    </shape>

</rotate>